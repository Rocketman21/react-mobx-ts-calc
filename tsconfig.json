{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
          "src/*": ["./src/*"]
        },
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "module": "commonjs",
        "lib": ["es6", "es2018", "dom"],
        "noImplicitAny": true,
        "outDir": "./dist/",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es5",
        "experimentalDecorators": true,
        "strictNullChecks": false
      },
      "include": [
        "src/**/*"
      ],
}